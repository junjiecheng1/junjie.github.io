<log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
        <file value="c:\beisen.logfiles\Beisen.LocalESB.Framework\trace.log"/>
        <appendToFile value="true" />
        <rollingStyle value="Size" />
        <maxSizeRollBackups value="10" />
        <maximumFileSize value="1000KB" />
        <staticLogFileName value="true" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%d [%t] %-5p %c [%x] - %m%n" />
        </layout>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Beisen.Configuration.BaseConfigurationManager" />
            <acceptOnMatch value="false" />
        </filter>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Beisen.Configuration.DirectoryWatcher" />
            <acceptOnMatch value="false" />
        </filter>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Beisen.FileNotExistLog"/>
            <acceptOnMatch value="false" />
        </filter>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Beisen.SecurityLog"/>
            <acceptOnMatch value="false" />
        </filter>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Beisen.RollminuteLog"/>
            <acceptOnMatch value="false" />
        </filter>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Beisen.Tracing.RaytraceLogger"/>
            <acceptOnMatch value="false" />
        </filter>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Beisen.Logging.Internal"/>
            <acceptOnMatch value="false" />
        </filter>
    </appender>

    <appender name="RollingFileAppenderConfiguration" type="log4net.Appender.RollingFileAppender">
        <file value='c:\beisen.logfiles\Beisen.LocalESB.Framework\trace_config.log' />
        <appendToFile value="true" />
        <rollingStyle value="Size" />
        <maxSizeRollBackups value="20" />
        <maximumFileSize value="3000KB" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%d [%t] %-5p %c [%x] - %m%n" />
        </layout>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Beisen.Configuration.BaseConfigurationManager" />
            <acceptOnMatch value="true" />
        </filter>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Beisen.Configuration.DirectoryWatcher" />
            <acceptOnMatch value="true" />
        </filter>
        <filter type="log4net.Filter.DenyAllFilter" />
    </appender>

    <appender name="RollingFileAppenderTracing" type="log4net.Appender.RollingFileAppender">
        <file value='c:\beisen.logfiles\Beisen.LocalESB.Framework\trace_perf.log' />
        <appendToFile value="true" />
        <rollingStyle value="Size" />
        <maxSizeRollBackups value="30" />
        <maximumFileSize value="3000KB" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%m%n" />
        </layout>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Beisen.Tracing.RaytraceLogger"/>
            <acceptOnMatch value="true" />
        </filter>
        <filter type="log4net.Filter.DenyAllFilter" />
    </appender>

    <appender name="RollingFileAppenderFileNotExist" type="log4net.Appender.RollingFileAppender">
        <file value="c:\beisen.logfiles\Beisen.LocalESB.Framework\trace_filenotexist.log"/>
        <appendToFile value="true" />
        <rollingStyle value="Size" />
        <maxSizeRollBackups value="10" />
        <maximumFileSize value="1000KB" />
        <staticLogFileName value="true" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%d [%t] %-5p %c [%x] - %m%n" />
        </layout>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Beisen.FileNotExistLog"/>
            <acceptOnMatch value="true" />
        </filter>
        <filter type="log4net.Filter.DenyAllFilter" />
    </appender>

    <appender name="RollingFileAppenderSecurity" type="log4net.Appender.RollingFileAppender">
        <file value="c:\beisen.logfiles\Beisen.LocalESB.Framework\trace_security.log"/>
        <appendToFile value="true" />
        <rollingStyle value="Size" />
        <maxSizeRollBackups value="10" />
        <maximumFileSize value="1000KB" />
        <staticLogFileName value="true" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%d [%t] %-5p %c [%x] - %m%n" />
        </layout>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Beisen.SecurityLog"/>
            <acceptOnMatch value="true" />
        </filter>
        <filter type="log4net.Filter.DenyAllFilter" />
    </appender>

    <appender name="RollingFileAppenderRollminute" type="log4net.Appender.RollingFileAppender">
        <file value="c:\beisen.logfiles\Beisen.LocalESB.Framework\trace_rollminute.log"/>
        <appendToFile value="true" />
        <rollingStyle value="Date" />
        <datePattern value="yyyyMMdd-HHmm" />
        <staticLogFileName value="true" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%m%n" />
        </layout>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Beisen.RollminuteLog"/>
            <acceptOnMatch value="true" />
        </filter>
        <filter type="log4net.Filter.DenyAllFilter" />
    </appender>

    <appender name="RollingFileAppenderLogging" type="log4net.Appender.RollingFileAppender">
        <file value='c:\beisen.logfiles\Beisen.LocalESB.Framework\trace_internal.log' />
        <appendToFile value="true" />
        <rollingStyle value="Size" />
        <maxSizeRollBackups value="20" />
        <maximumFileSize value="3000KB" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%d [%t] %-5p %c [%x] - %m%n" />
        </layout>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Beisen.Logging.Internal"/>
            <acceptOnMatch value="true" />
        </filter>
        <filter type="log4net.Filter.DenyAllFilter" />
    </appender>

    <root>
        <level value="ERROR" />
        <appender-ref ref="RollingFileAppender" />
        <appender-ref ref="RollingFileAppenderConfiguration" />
        <appender-ref ref="RollingFileAppenderTracing" />
        <appender-ref ref="RollingFileAppenderFileNotExist" />
        <appender-ref ref="RollingFileAppenderSecurity" />
        <appender-ref ref="RollingFileAppenderLogging" />
    </root>
</log4net>
